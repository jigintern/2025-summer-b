{
  "tasks": {
    "start": "deno run --watch --unstable-kv --allow-net --allow-read server.deno.ts"
  },
  "lint": {
    "include": [
      "./**/*.js",
      "./**/*.ts",
      "./**/*.html",
      "./**/*.css"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": [
      "./**/*.js",
      "./**/*.ts",
      "./**/*.html",
      "./**/*.css"
    ]
  }
}
